---
import TerminalIcon from '../../atoms/terminal-icon/TerminalIcon.astro';
import Terminal from '../terminal/Terminal.astro';
import './skills-on-terminal.css';
---

<Terminal nombre="julienBrunel">
	<div class="terminal__skills">
		<h2>Mon stack</h2>
		<div class="terminal__skills__container">
			<TerminalIcon
				src="/assets/html.svg"
				color="#7738ff"
				name="HTML"
			/>
			<TerminalIcon
				src="/assets/css.svg"
				color="#FF4747"
				name="CSS"
			/>
			<TerminalIcon
				src="/assets/javascript.svg"
				color="#00D1FF"
				name="JavaScript"
			/>
			<TerminalIcon src="/assets/react.svg" color="#F3CBC2" name="React" />
			<TerminalIcon src="/assets/nodejs.svg" color="#00A3FF" name="NodeJS" />
			<TerminalIcon
				src="/assets/mongodb.svg"
				color="#3F75FF"
				name="MongoDB"
			/>
		</div>
	</div>
