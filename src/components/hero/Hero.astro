---
import './hero.css';
import Boton from '../atoms/Boton.astro';
---

<section class="hero">
	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">Julien Brunel</h1>
			<p class="hero__text">
				Développeur Junior,
			</p>
